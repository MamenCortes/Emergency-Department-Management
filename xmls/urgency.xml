<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<!DOCTYPE Doctor [
  	<!ELEMENT Patient (id, name, surname, weight, height, status, urgency, sex, birthDate)>
	<!ATTLIST Patient 
	id CDATA #REQUIRED 
    weight CDATA #IMPLIED
    height CDATA #IMPLIED
    urgency CDATA #IMPLIED
	> 
	<!ELEMENT Doctor (id, name, surname, username, speciality, in_box, patients, boxes)> <!-- he cambiado speciality_type por speciality para escribir menos-->
	<!ATTLIST Doctor 
	id CDATA #REQUIRED
	in_box CDATA #IMPLIED
	> 
	
	<!ELEMENT Box (id, available, speciality)>
	<!ATTLIST Box 
	id CDATA #REQUIRED 
	available CDATA #IMPLIED
	>
	
	<!ELEMENT name (#PCDATA)>
	<!ELEMENT surname (#PCDATA)>
	<!ELEMENT status (#PCDATA)>
	<!ELEMENT sex (#PCDATA)>
	<!ELEMENT birthDate (#PCDATA)>
	<!ELEMENT speciality (#PCDATA)>
	<!ELEMENT username (#PCDATA)>
	<!ELEMENT patients (Patient+)>
	<!ELEMENT boxes (Box+)>

]>

<Doctor id="1" in_box="true"> <!-- check if it converts correctly or not-->
    <name>John</name>
    <surname>Doe</surname>
    <speciality>Cardiology</speciality>
    <patients>
        <Patient id="5", weight="47", height="165", urgency="1">
            <id>P001</id>
            <name>Jane</name>
            <surname>Smith</surname>
            <sex>Female</sex>
            <birthDate>1985-05-15</birthDate>
        </Patient>
    </patients>
    <boxes>
        <Box id="12" available="true">
            <speciality>Cardiology</speciality>
        </Box>
    </boxes>
</Doctor>